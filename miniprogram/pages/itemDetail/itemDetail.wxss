/* 物品信息区基础样式 */
.item-info {
    line-height: 1.6;
  }
  
  /* 物品名称 */
  .item-name {
    font-size: 32rpx;
    font-weight: bold;
  }
  
  /* 分类（单独一行） */
  .item-category {
    color: #666;
    display: block; /* 强制换行（可选，若需独占一行） */
  }
  
  /* 标签（单独一行） */
  .item-tag {
    color: #666;
    display: block; /* 强制换行（可选，若需独占一行） */
  }
  
  /* 物品描述 */
  .item-desc {
    margin-top: 10rpx;
    color: #333;
  }
  
  /* 按钮样式 */
  .btn {
    width: 100%;
    background: #333;
    color: #fff;
    padding: 20rpx;
    border-radius: 8rpx;
  }
  