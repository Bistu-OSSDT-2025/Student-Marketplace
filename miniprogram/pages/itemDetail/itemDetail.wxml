<view class="item-container p-16">
  <!-- 物品图片 -->
  <image src="{{item.image}}" class="item-img"></image>

  <!-- 物品信息区 -->
  <view class="item-info mt-10 p-20 bg-white rounded">
    <!-- 物品名称 -->
    <text class="item-name">{{item.name}}</text>
    
    <!-- 分类（单独一行） -->
    <text class="item-category mt-5">分类：{{item.category}}</text>
    
    <!-- 标签（单独一行） -->
    <text class="item-tag mt-5">标签：{{item.tag}}</text>
    
    <!-- 物品描述 -->
    <text class="item-desc mt-10">{{item.desc}}</text>

    <!-- 交互按钮 -->
    <button bindtap="copyWechat" class="btn mt-20">私聊（复制原主微信）</button>
    <button bindtap="confirmTrade" class="btn mt-10">达成交易</button>
  </view>
</view>
