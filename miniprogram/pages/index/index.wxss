/* 搜索栏 */
.search-bar {
  display: flex;          /* 强制 Flex 布局 */
  align-items: center;    /* 垂直居中 */
  justify-content: space-between; /* 输入框和按钮两端对齐 */
  height: 80rpx;
  background: #fff;       /* 新增：给搜索栏加背景，更明显 */
  border-radius: 8rpx;    /* 新增：圆角，提升美观 */
  padding: 0 10rpx;       /* 新增：左右内边距，避免贴边 */
  }
.search-input {
  flex: 1;                /* 占满剩余空间 */
  height: 60rpx;
  line-height: 60rpx;     /* 与高度一致，文字垂直居中 */
  padding: 0 10rpx;
  background: #f5f5f5;    /* 新增：输入框背景区分 */
  border: 1px solid #ddd;
  border-radius: 8rpx 0 0 8rpx;
}
.search-btn {
    width: 120rpx;
    height: 60rpx;          /* 与输入框高度统一 */
    line-height: 60rpx;     /* 文字垂直居中 */
    text-align: center;
    background: #333;
    color: #fff;
    border-radius: 0 8rpx 8rpx 0;
}
  
/* 分类容器：两列并排 */
.category-grid {
    display: flex;
    justify-content: space-between; /* 列之间均匀分布 */
    margin-top: 10rpx;
  }
  /* 每列占比 ~48%，留出间距 */
  .category-column {
    width: 48%; 
  }
  /* 分类项：图标+文字垂直居中 */
  .category-item {
    margin-bottom: 28rpx; /* 增加间距，更美观 */
  }
  /* 分类图标大小 */
  .category-icon {
    width: 48rpx;
    height: 48rpx;
  }
  /* 分类文字 */
  .category-text {
    font-size: 26rpx;
  }
  
  
