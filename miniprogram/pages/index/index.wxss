/* 物品列表布局（核心修改） */
.items-container {
    display: flex;          /* 启用 Flex 布局 */
    flex-wrap: wrap;        /* 允许项目换行 */
    justify-content: space-between; /* 项目两端对齐，中间间距均匀 */
  }
  .item-card {
    width: 48%;             /* 单卡片宽度：48%（两列共96%，留4%间距） */
    margin-bottom: 20rpx;   /* 卡片上下间距 */
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  .item-image {
    width: 100%;
    height: 300rpx;         /* 统一图片高度，避免布局混乱 */
    display: block;
  }
  .item-info {
    padding: 16rpx;
  }
  .item-name {
    font-size: 28rpx;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 8rpx;
  }
  .item-desc {
    font-size: 24rpx;
    color: #666;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
