/* 全局容器 */
.index-container {
  background: #f5f7fa;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background: white;
  padding: 32rpx 24rpx 16rpx 24rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f2f3f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 72rpx;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.04);
}

.search-icon {
  font-size: 30rpx;
  margin-right: 16rpx;
  color: #b2b2b2;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
}

.search-input input:focus {
  outline: none;
}

/* 分类导航 */
.category-nav {
  background: white;
  padding: 24rpx 0 8rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eaeaea;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 0 12rpx 0;
  border-radius: 24rpx;
  transition: all 0.2s;
}

.category-item.active {
  background: #e6f9f0;
}

.category-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
  background: #f2f3f5;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.08);
  object-fit: cover;
  transition: box-shadow 0.2s;
}

.category-item.active .category-icon {
  background: #07c160;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.18);
}

.category-name {
  font-size: 24rpx;
  color: #888;
  margin-top: 2rpx;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #07c160;
  font-weight: bold;
}

/* 商品列表 */
.item-list {
  padding: 24rpx 24rpx 0 24rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #b2b2b2;
  font-size: 28rpx;
}

/* 商品卡片 */
.item-card {
  background: white;
  border-radius: 28rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(7,193,96,0.08);
  transition: transform 0.18s, box-shadow 0.18s;
  position: relative;
}

.item-card:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 32rpx rgba(7,193,96,0.16);
}

.item-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
  border-radius: 28rpx 28rpx 0 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.item-info {
  padding: 24rpx 20rpx 20rpx 20rpx;
}

.item-title {
  font-size: 30rpx;
  color: #222;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-price {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.item-category {
  font-size: 22rpx;
  color: #fff;
  background: #07c160;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
  margin-top: 8rpx;
  font-weight: 500;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0 60rpx 0;
  color: #b2b2b2;
  font-size: 24rpx;
}

/* 分类区域 */
.category-section {
  margin-top: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.category-grid {
  display: flex;
  justify-content: space-between;
}

.category-column {
  width: 48%;
}

.category-item {
  margin-bottom: 32rpx;
  padding: 20rpx 16rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #e8ecff 100%);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.category-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
}

.category-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-left: 16rpx;
}

/* 最新物品区域 */
.latest-items {
  margin-top: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.items-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item-card {
  width: 48%;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.item-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.item-image {
  width: 100%;
  height: 320rpx;
  display: block;
  object-fit: cover;
}

.item-info {
  padding: 20rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .index-container {
    padding: 24rpx 16rpx;
  }
  
  .category-item {
    padding: 16rpx 12rpx;
  }
  
  .item-card {
    width: 100%;
    margin-bottom: 20rpx;
  }
}
  
