.form-item {
    background: #fff;
    padding: 20rpx;
    border-radius: 8rpx;
  }
  .label {
    font-weight: bold;
    display: block;
    margin-bottom: 10rpx;
  }
  .preview-img {
    width: 200rpx;
    height: 200rpx;
    margin-top: 10rpx;
  }
  .upload-btn {
    background: #eee;
    color: #666;
    padding: 12rpx 24rpx;
    border-radius: 8rpx;
  }
  .input, .textarea {
    width: 100%;
    padding: 12rpx;
    border: 1px solid #ddd;
    border-radius: 8rpx;
    box-sizing: border-box;
  }
  .textarea {
    height: 160rpx;
  }
  .publish-btn {
    background: #333;
    color: #fff;
    padding: 20rpx;
    border-radius: 8rpx;
  }
  