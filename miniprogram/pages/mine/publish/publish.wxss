.publish-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

/* 图片上传 */
.image-upload {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  position: relative;
  overflow: hidden;
}

.upload-placeholder {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 输入框 */
.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input:focus {
  border-color: #07c160;
  background: white;
}

/* 选择器 */
.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fafafa;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 文本域 */
.textarea {
  width: 100%;
  min-height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  line-height: 1.5;
}

.textarea:focus {
  border-color: #07c160;
  background: white;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 88rpx;
  background: #ccc;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  transition: all 0.3s;
}

.publish-btn.active {
  background: #07c160;
}

.publish-btn.active:active {
  background: #06ad56;
}

.publish-btn:disabled {
  background: #ccc;
  color: #999;
}
  