.privacy-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.privacy-content {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.privacy-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  display: block;
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.section-item {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
}

.contact-email {
  font-size: 28rpx;
  color: #07c160;
  text-decoration: underline;
  display: block;
  margin-top: 16rpx;
} 