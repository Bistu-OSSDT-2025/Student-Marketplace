.category-container {
  padding: 32rpx 16rpx 0 16rpx;
  background: linear-gradient(135deg, #e0f7fa 0%, #f5f7fa 100%);
  min-height: 100vh;
}
.category-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.category-card {
  width: 48%;
  background: linear-gradient(120deg, #fff 60%, #e0f7fa 100%);
  border-radius: 22rpx;
  box-shadow: 0 6rpx 24rpx rgba(7,193,96,0.10);
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0 24rpx 0;
  transition: box-shadow 0.2s, transform 0.15s;
  position: relative;
  overflow: hidden;
}
.category-card:active {
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.18);
  transform: scale(0.97);
}
.category-img-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 18rpx;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.10);
}
.category-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.10);
}
.category-name {
  font-size: 34rpx;
  color: #07c160;
  font-weight: 700;
  text-align: center;
  letter-spacing: 2rpx;
  margin-top: 8rpx;
  text-shadow: 0 2rpx 8rpx #e0f7fa;
}

.all-category {
  background-color: #f5f5f5;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.category-img {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.category-header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}
.category-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #07c160;
  letter-spacing: 2rpx;
  margin-top: 8rpx;
}
.category-divider {
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #07c160 0%, #34e89e 100%);
  border-radius: 3rpx;
  margin: 16rpx 0 0 0;
}

.category-simple-bg {
  background: #f6f7f9;
  min-height: 100vh;
  padding: 32rpx 0 0 0;
}
.category-simple-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
}
.category-simple-card {
  width: 47%;
  background: #fff;
  border-radius: 22rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0 22rpx 0;
  box-sizing: border-box;
  box-shadow: 0 4rpx 18rpx rgba(7,193,96,0.07);
  transition: box-shadow 0.2s, transform 0.15s;
}
.card-active {
  transform: scale(0.96);
  transition: transform 0.15s;
}
.fade-in-up {
  animation: fadeInUp 0.5s cubic-bezier(0.23, 1, 0.32, 1);
}
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.category-img-border {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e0f7fa 0%, #07c160 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 18rpx;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.10);
}
.category-simple-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  object-fit: cover;
  background: #fff;
}
.category-simple-name {
  font-size: 32rpx;
  color: #222;
  font-weight: 700;
  text-align: center;
  letter-spacing: 1rpx;
  margin-top: 10rpx;
}
  