.category-container {
    padding: 16rpx;
  }
  .category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
    background-color: #fff;
    padding: 20rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  .all-category {
    background-color: #f5f5f5;
  }
  .category-img {
    width: 100%;
    height: 300rpx;
    border-radius: 8rpx;
    margin-bottom: 10rpx;
  }
  