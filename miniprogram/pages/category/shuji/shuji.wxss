.category-detail-container {
    padding: 16rpx;
  }
  .detail-header {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  .items-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .item-card {
    width: 48%; 
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  .item-image {
    width: 100%;
    height: 300rpx;
    display: block;
  }
  .item-info {
    padding: 16rpx;
  }
  .item-name {
    font-size: 28rpx;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 8rpx;
  }
  .item-desc {
    font-size: 24rpx;
    color: #666;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  