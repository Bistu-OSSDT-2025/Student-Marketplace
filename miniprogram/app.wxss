 /* 基础重置 */
 page {
    background: #f8f9fa;
    font-size: 28rpx;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    color: #333;
    line-height: 1.6;
  }
  button {
    border: none;
    outline: none;
    background: transparent;
    padding: 0;
    margin: 0;
  }
  button::after {
    border: none;
  }
  navigator {
    text-decoration: none;
    color: inherit;
    background: transparent;
  }
  /* 通用间距 */
  .mt-10 { margin-top: 20rpx; }
  .mt-20 { margin-top: 40rpx; }
  .mt-30 { margin-top: 60rpx; }
  .p-16 { padding: 16rpx; }
  .p-20 { padding: 20rpx; }
  .p-24 { padding: 24rpx; }
  
  /* 通用布局类 */
  .flex {
    display: flex;
  }
  .flex-1 {
    flex: 1;
  }
  .flex-wrap {
    flex-wrap: wrap;
  }
  .align-center {
    align-items: center;
  }
  .justify-center {
    justify-content: center;
  }
  .justify-between {
    justify-content: space-between;
  }
  
  /* 通用圆角类 */
  .rounded {
    border-radius: 12rpx;
  }
  .rounded-lg {
    border-radius: 20rpx;
  }
  .rounded-full {
    border-radius: 50%;
  }
  
  /* 通用阴影类 */
  .shadow {
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  .shadow-lg {
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  }
  
  /* 通用文本类 */
  .text-center {
    text-align: center;
  }
  .text-primary {
    color: #667eea;
  }
  .text-secondary {
    color: #666;
  }
  .text-muted {
    color: #999;
  }
  .font-bold {
    font-weight: 600;
  }
  .font-medium {
    font-weight: 500;
  }
  
  /* 通用背景类 */
  .bg-white {
    background: #fff;
  }
  .bg-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  
  /* 动画效果 */
  .transition {
    transition: all 0.3s ease;
  }
  .hover-scale:hover {
    transform: scale(1.02);
  }
  .hover-lift:hover {
    transform: translateY(-4rpx);
  }
  